<Window x:Class="AutoProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed" StateChanged="Window_StateChanged" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="rule_list" HorizontalAlignment="Left" Height="299" VerticalAlignment="Top" Width="517" Margin="0,20,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="SSID" Width="240" DisplayMemberBinding="{Binding SSID}" />
                    <GridViewColumn Header="Proxy" Width="120" DisplayMemberBinding="{Binding Proxy.Host}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="507" RenderTransformOrigin="-0.127,0.346">
            <MenuItem Header="Rules">
                <MenuItem Header="Add rule" Click="click_AddRule" />
            </MenuItem>
        </Menu>


    </Grid>
</Window>
